#!/bin/zsh

source .packages.rc

for package in ${packages[@]}
do
    pushd $package
    echo && pwd

    case "$1" in
	all)
	    make -j4 && sudo make install
	    ;;
	clean)
	    make clean
	    ;;
	install)
	    sudo make install
	    ;;
	uninstall)
	    sudo make uninstall
	    ;;
	distcheck)
	    sudo make distcheck
	    ;;
	config)
	    autoreconf -vfi && ./configure --prefix=/usr --sysconf=/etc "CXXFLAGS=-O3 -Wall"
	    ;;
	debug)
	    autoreconf -vfi && ./configure --prefix=/usr --sysconf=/etc "CXXFLAGS=-O0 -ggdb3 -Wall"
	    ;;
    esac
    if [[ $? != 0 ]]
    then
	exit -1
    fi
    popd
done
