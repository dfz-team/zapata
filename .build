#!/bin/bash

source .packages.rc

if [[ "$1" == "config" || "$1" == "debug" ]]
then
    echo "exclude_list=()" > .exclude.rc
fi
source .exclude.rc

threads=$(grep -c ^processor /proc/cpuinfo)
cxx_compiler=g++
cxx_version=$(${cxx_compiler} --version | head -n 1 | tr " " "\n" | tail -n 1 | tr "." "\n" | head -n 1)
if [ ${cxx_version} -lt 10 ]
then
    cxx_std_version="-std=c++17"
else
    cxx_std_version="-std=c++20"
fi

env_variables="CPP_STD_VERSION=${cxx_std_version}"

if [[ "$1" == "one" ]]
then
    title="Processing '${2}'"
    underlines=$(printf %s "${title}" | tr -c '-' '[-*]')
    echo
    echo ${title}
    echo ${underlines}

	make -s -j$threads -C ${2}/build && sudo make -s -C ${2}/build install
	if [[ $? != 0 ]]
	then
		exit -1
	fi
    exit 0
fi

if [[ "${1}" != "one" && "${1}" != "from" ]]
then
    if [[ "${@:2}" != "" ]]
    then
        exclude_list=(${@:2} ${exclude_list})
    fi
else
    if [[ "${@:3}" != "" ]]
    then
        exclude_list=(${@:3} ${exclude_list})
    fi
fi

distro=$(lsb_release -c -s)
goahead="no"
for package in ${projects[@]}
do
    skip=0
    for exc in ${exclude_list[@]}
    do
        if [[ "${exc}" == "${package}" ]]
        then
            skip=1
        fi
    done
    if [[ "${skip}" == "1" ]]
    then
        continue
    fi

    if [[ "${1}" == "from" ]]
    then
        if [[ "${2}" == "${package}" ]]
        then
            goahead="yes"
        elif [[ "${goahead}" == "no" ]]
        then
            continue
        fi
    fi

    title="Processing '${package}'"
    underlines=$(printf %s "${title}" | tr -c '-' '[-*]')
    echo
    echo ${title}
    echo ${underlines}

    case "${1}" in
	all)
	    CPP_STD_VERSION=${cxx_std_version} make -s -j$threads -C ${package}/build && sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build install
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
	    ;;
    from)
	    CPP_STD_VERSION=${cxx_std_version} make -s -j$threads -C ${package}/build && sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build install
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
        ;;
	single)
	    CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build && sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build install
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
	    ;;
	clean)
	    CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build clean
	    ;;
	install)
	    sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build install
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
	    ;;
	uninstall)
	    sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build uninstall
	    ;;
	distcheck)
	    rm -rfv ${package}/*.tar.gz
        export CPP_STD_VERSION=${cxx_std_version}
	    sudo ${env_variables} make -s -C ${package}/build -j$threads distcheck && sudo ${env_variables} make -s -C ${package}/build install
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
	    ;;
	distclean)
	    rm -rfv ${package}/*.tar.gz
	    sudo CPP_STD_VERSION=${cxx_std_version} make -s -C ${package}/build distclean
	    ;;
	config)
        echo "exclude_list=(${exclude_list})" > .exclude.rc
        pushd ${package} > /dev/null
	    rm -rf build && autoreconf -vfi && mkdir build && cd build && ${env_variables} ../configure  --prefix=/usr --sysconf=/etc --libdir=/usr/lib --libexecdir=/usr/lib "CXXFLAGS=-O3 -Wall -fno-stack-protector"
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
        popd > /dev/null
	    ;;
	debug)
        echo "exclude_list=(${exclude_list})" > .exclude.rc
        pushd ${package} > /dev/null
	    rm -rf build && autoreconf -vfi && mkdir build && cd build && ${env_variables} ../configure  --prefix=/usr --sysconf=/etc --libdir=/usr/lib --libexecdir=/usr/lib "CXXFLAGS=-O0 -ggdb3 -Wall"
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
        popd > /dev/null
	    ;;
	package)
        pushd ${package} > /dev/null
        export CPP_STD_VERSION=${cxx_std_version}
        ./make_deb
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
        popd > /dev/null
	    ;;
    format)
        pushd ${package} > /dev/null
        change_list=($(find . -name "*.cpp" -o -name "*.h"))
        for f in ${change_list[@]}
        do
            echo "checking '${f}'"
            dos2unix ${f}
            clang-format -i --style=file ${f}
	        if [[ $? != 0 ]]
	        then
		        exit -1
	        fi
        done
        ;;
    tidy)
        pushd ${package} > /dev/null
        # clang-tidy --format-style=file --config= $(find . -name "*.cpp")
        #  --fix-errors --fix
        # '-*,cppcoreguidelines*,clang-analyzer-cplusplus*,modernize*,bugprone*,-cppcoreguidelines-pro-*,-cppcoreguidelines-avoid-magic-numbers,-cppcoreguidelines-init-variables'
	    if [[ $? != 0 ]]
	    then
		    exit -1
	    fi
        popd > /dev/null
        ;;
    esac
done
