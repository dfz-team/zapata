#!/bin/zsh

source .packages.rc

case "$1" in
    bump)
	current_ac=$(cat base/configure.ac | grep -F 'AC_INIT' | awk '{print $2}')
	current_ac=${current_ac%,}
	git tag -a "v$current_ac" -m "Version $current_ac"
	git push origin "v$current_ac"
	;;
esac

for package in ${projects[@]}
do
    pushd $package
    echo && pwd

    case "$1" in
	bump)
	    if [[ "$2" == "minor" ]]
	    then
		../.bump
	    else
		../.bump "$3" "$4" "$5"
	    fi
	    ;;
    esac
    if [[ $? != 0 ]]
    then
	exit -1
    fi
    popd
done
